server {
	charset utf-8;
	client_max_body_size 128M;
	client_body_buffer_size 24M;
	sendfile off;

	listen  443 ssl http2;

	ssl_session_cache shared:SSL:10m;
	ssl_session_timeout 10m;
	ssl_prefer_server_ciphers on;
	ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
	ssl_certificate /etc/nginx/ssl/priv.pem;
	ssl_certificate_key /etc/nginx/ssl/public.pem;
	ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:HIGH:!aNULL:!MD5:!kEDH';
	#ssl_stapling on;
	ssl_stapling_verify on;

	add_header  X-Frame-Options             "ALLOW-FROM https://test.off";
	add_header  X-Content-Type-Options      "nosniff";
	add_header Strict-Transport-Security "max-age=31536000; includeSubdomains;";

	server_name test.off;
	root        /home/tema/projects/test;
	index       index.php;

	gzip on;
	gzip_min_length  1100;
	gzip_buffers     4 16k;
	gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript font/ttf application/x-font-ttf application/vnd.ms-fontobject application/font-woff application/font-woff2 font/opentype image/svg+xml;
	gzip_comp_level 6;

	access_log /home/tema/projects/logs/test.access.log;
	error_log /home/tema/projects/logs/test.error.log error;

	location / {
        	try_files $uri $uri/ /index.php$is_args$args;
	}

	#location ~ ^/uploads/.*\.php$ {
	#	deny all;
	#}

	location ~*  \.(jpg|jpeg|png|gif|ico|woff|woff2|svg|ttf|css|js)$ {
		expires 365d;
	}

	location @redir301 {
		rewrite  .*  /page-404/ permanent;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
        	fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
		#fastcgi_index  index.php;

		fastcgi_param  DOCUMENT_ROOT    /home/tema/projects/test;
		fastcgi_param  SCRIPT_FILENAME  /home/tema/projects/test$fastcgi_script_name;
		fastcgi_param  PATH_TRANSLATED  /home/tema/projects/test$fastcgi_script_name;

		include fastcgi_params;
		fastcgi_param  QUERY_STRING     $query_string;
		fastcgi_param  REQUEST_METHOD   $request_method;
		fastcgi_param  CONTENT_TYPE     $content_type;
		fastcgi_param  CONTENT_LENGTH   $content_length;
		fastcgi_intercept_errors        on;
		fastcgi_ignore_client_abort     off;
		fastcgi_connect_timeout 120;
		fastcgi_send_timeout 180;
		fastcgi_read_timeout 180;
		fastcgi_buffer_size 128k;
		fastcgi_buffers 4 256k;
		fastcgi_busy_buffers_size 256k;
		fastcgi_temp_file_write_size 256k;
	}

	location ~* /\. {
		deny all;
	}

   	location = /robots.txt {
   		allow all;
   		log_not_found off;
   		access_log off;
   		rewrite ^/robots.txt /robots.php;
   	}

	location ~ /\.(ht|svn|git) {
		deny all;
	}
}


